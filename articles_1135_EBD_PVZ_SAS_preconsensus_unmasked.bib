@article{28641907,
  title={Is fusion superior to non-fusion for the treatment of thoracolumbar burst fracture? A systematic review and meta-analysis.},
  year={2017},
  month={1},
  journal={Journal of orthopaedic science : official journal of the Japanese Orthopaedic Association},
  issn={0949-2658},
