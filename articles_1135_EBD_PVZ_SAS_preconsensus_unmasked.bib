  author={Klazen, Caroline A H and Lohle, Paul N M and de Vries, Jolanda and Jansen, Frits H and Tielbeek, Alexander V and Blonk, Marion C and Venmans, Alexander and van Rooij, Willem Jan J and Schoemaker, Marinus C and Juttmann, Job R and Lo, Tjoen H and Verhaar, Harald J J and van der Graaf, Yolanda and van Everdingen, Kaspar J and Muller, Alex F and Elgersma, Otto E H and Halkema, Dirk R and Fransen, Hendrik and Janssens, Xavier and Buskens, Erik and Mali, Willem P Th M},
  url={https://www.ncbi.nlm.nih.gov/pubmed/20701962},
