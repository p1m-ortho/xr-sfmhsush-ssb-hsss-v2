  author={Wei, Fu-Xin and Liu, Shao-Yu and Liang, Chun-Xiang and Li, Hao-Miao and Long, Hou-Qing and Yu, Bin-Sheng and Chen, Bai-Ling and Chen, Ke-Bing},
